<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragment_Coach.ManageCourseFragment">

    <com.animsh.materialsearchbar.MaterialSearchBar
        android:id="@+id/materialSearchBar"
        style="@style/MyCustomTheme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:mt_backIconDrawable="@drawable/ic_search"
        app:mt_clearIconDrawable="@drawable/ic_close_black_48dp"
        app:mt_hint="Search Class"
        app:mt_placeholder="Search Class"
        app:mt_searchIconDrawable="@drawable/ic_search"
        app:mt_placeholderColor="@color/cpp_text"
        android:textStyle="normal" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewClassesStudent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:background="@android:color/white"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/materialSearchBar"
        tools:layout_editor_absoluteX="0dp"
        tools:listitem="@layout/item_class" />

</androidx.constraintlayout.widget.ConstraintLayout>